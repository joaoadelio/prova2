<p id="notice"><%= notice %></p>

<h1>Meus Auncios</h1>

<table class="table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Preco</th>
      <th>Visualizacao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertisements.each do |advertisement| %>
      <tr>
        <td><%= advertisement.titulo %></td>
        <td><%= advertisement.descricao %></td>
        <td><%= advertisement.preco %></td>
        <td><%= advertisement.visualizacao %></td>
        <td><%= link_to 'Visualizar', advertisement, :class=> "btn btn-warning" %></td>
        <td><%= link_to 'Editar', edit_advertisement_path(advertisement), :class=> "btn btn-info" %></td>
        <td><%= link_to 'Deletar', advertisement, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Anuncio', new_advertisement_path, :class=> "btn btn-outline-success btn-lg" %>
