<p id="notice"><%= notice %></p>

<h1>Categorias</h1>

<table class="table">
  <thead>
    <tr>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.descricao %></td>
        <td><%= link_to 'Visualizar', category, :class=> "btn btn-warning" %></td>
        <td><%= link_to 'Editar', edit_category_path(category), :class=> "btn btn-info" %></td>
        <td><%= link_to 'Deletar', category, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova categoria', new_category_path, :class=> "btn btn-outline-success btn-lg" %>
